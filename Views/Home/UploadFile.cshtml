@model BoomerangFile

@{
    ViewData["Title"] = "Boomerang - File Upload";
}

<h1>Upload a new File</h1>
<p>Max file size: 2MB</p>

<form enctype="multipart/form-data" asp-action="UploadFile" method="post">
    @Html.AntiForgeryToken()
    <div class="form-row">
        <div class="form-group custom-file col-md-6">
            <input class="custom-file-input" id="uploadFileForm" type="file" name="newFile" asp-for="FileData" />
            <label class="custom-file-label" for="uploadFileForm"></label>
        </div>
    </div>

    <br />
    <div class="form-row">
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Upload" />
        </div>
    </div>
</form>

